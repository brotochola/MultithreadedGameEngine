{
  "name": "@brotochola/multithreaded-game-engine",
  "version": "2.0.0",
  "description": "A high-performance multithreaded game engine using SharedArrayBuffer and Web Workers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./workers/*": "./dist/workers/*.js"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "directories": {
    "lib": "src",
    "test": "tests",
    "doc": "docs"
  },
  "scripts": {
    "dev": "node server/node_server.js",
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "game-engine",
    "multithreaded",
    "web-workers",
    "shared-array-buffer",
    "ecs",
    "physics",
    "webgl",
    "pixi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@dimforge/rapier2d-compat": "^0.11.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@dimforge/rapier2d-compat": "^0.11.2"
  }
}
